    <Project Sdk="Microsoft.NET.Sdk.Web">

      <PropertyGroup>
        <!-- The project uses modern C# features (Program.cs) -->
        <TargetFramework>net8.0</TargetFramework>
        <!-- ImplicitUsings and Nullable are standard for modern ASP.NET Core apps -->
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
      </PropertyGroup>

      <ItemGroup>
        <!-- Required for the Web API setup (Program.cs) and Swagger -->
        <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
        
        <!-- Required for Nethereum and configuration loading -->
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
        <PackageReference Include="Nethereum.Web3" Version="4.17.0" />
        <PackageReference Include="Nethereum.Util" Version="4.17.0" />
      </ItemGroup>

    </Project>